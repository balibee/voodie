extends layout

block content
  nav.navbar.navbar-expand-md.navbar-light.bg-light.fixed-top
    .container-fluid
      a.navbar-brand(href='/') Voodie
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto.mb-2.mb-md-0
          li.nav-item.active
            a.nav-link(aria-current='page' href='/') Home
          li.nav-item
            a.nav-link(href='#') Meal Planner
          li.nav-item
            a.nav-link(href='#') Inspiration
          li.nav-item
            a.nav-link(href='#') Profile
        a.btn.btn-outline-success(href="/login" role="button") Logout

  .container
    .row
      .col-3
        h3 Oct 12
      .col-9.text-right
        h3 Good morning, Jill!
        p Here's what's on the menu for today.

  .daily-recipe-plan.container.d-flex.flex-column.align-content-around

    .daily-recipe-card
      h2 Breakfast
      .card.text-white
        img.card-img(src='https://picsum.photos/600/300?random=1', alt='...')
        .card-img-overlay.d-flex.flex-row.justify-content-between.align-items-end
          .card-body.d-flex.justify-content-between
            h5.card-title.col-sm-10 Classic French Toast with Caramalized Fruit
            h5.card-title.col-sm-2.text-right 15 mins

    .daily-recipe-card
      h2 Lunch
      .card.text-white
        img.card-img(src='https://picsum.photos/600/300?random=2', alt='...')
        .card-img-overlay.d-flex.flex-row.justify-content-between.align-items-end
          .card-body.d-flex.justify-content-between
            h5.card-title.col-sm-10 Ultimate Bean and Rice Burrito
            h5.card-title.col-sm-2.text-right 15 mins

    .daily-recipe-card
      h3 Dinner
      .card.text-white
        img.card-img-top(src='https://picsum.photos/600/300?random=3', alt='...')
        .card-img-overlay.d-flex.flex-row.justify-content-between.align-items-end
          .card-body.d-flex.justify-content-between
            h5.card-title.col-sm-10 Roasted Pumpkin Soup
            h5.card-title.col-sm-2.text-right 30 mins